<UserControl
    x:Class="PayrollSoftware.TaskManagement.Views.TasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:PayrollSoftware.TaskManagement.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PayrollSoftware.TaskManagement.ViewModels"
    d:DataContext="{d:DesignInstance vm:TasksViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UserControlStyle}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource GroupBoxBaseStyle}" TargetType="GroupBox">
            <Setter Property="Margin" Value="5,2,5,0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="hc:BorderElement.CornerRadius" Value="0" />
            <Setter Property="hc:TitleElement.Background" Value="{DynamicResource RegionBrush}" />
            <Setter Property="Background" Value="{DynamicResource RegionBrush}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style BasedOn="{StaticResource ListBoxBaseStyle}" TargetType="{x:Type ListBox}">
            <Setter Property="dd:DragDrop.IsDragSource" Value="True" />
            <Setter Property="dd:DragDrop.IsDropTarget" Value="True" />
            <Setter Property="dd:DragDrop.UseDefaultEffectDataTemplate" Value="True" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>
    </UserControl.Resources>
    <hc:TransitioningContentControl>
        <hc:Interaction.Triggers>
            <hc:EventTrigger EventName="Loaded">
                <hc:EventToCommand Command="{Binding LoadedCommand}" />
            </hc:EventTrigger>
            <hc:EventTrigger EventName="Unloaded">
                <hc:EventToCommand Command="{Binding UnLoadedCommand}" />
            </hc:EventTrigger>
        </hc:Interaction.Triggers>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="5"
                Orientation="Horizontal">
                <Button
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    hc:IconElement.Geometry="{StaticResource AddGeometry}"
                    hc:IconElement.Width="20"
                    Content="Create new"
                    Style="{StaticResource ButtonDashedInfo}" />
            </StackPanel>
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <GridSplitter
                    Grid.Column="1"
                    Width="1"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource BorderBrush}" />
                <GridSplitter
                    Grid.Column="5"
                    Width="1"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource BorderBrush}" />
                <GridSplitter
                    Grid.Column="3"
                    Width="1"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource BorderBrush}" />
                <GroupBox Margin="2,2,5,0" FontWeight="DemiBold">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Width="10"
                                Height="10"
                                Margin="2"
                                Background="Orange"
                                CornerRadius="100" />
                            <TextBlock Margin="2">TO DO</TextBlock>
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox
                        ItemsSource="{Binding TaskToDos}"
                        MouseLeave="ListBox_MouseLeave"
                        SelectedValue="{Binding CurrentTask, Mode=TwoWay}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                <Setter Property="Margin" Value="0,10,0,10" />
                                <Setter Property="MinHeight" Value="60" />
                                <Setter Property="Effect" Value="{StaticResource EffectShadow3}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <hc:TransitioningContentControl TransitionMode="Bottom2Top">
                                                <Border
                                                    x:Name="Bd"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="{Binding Path=(hc:BorderElement.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                                                    SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                            </hc:TransitioningContentControl>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,2,0,2"
                                        FontSize="8"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskCode}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="0,2,0,2"
                                        FontSize="16"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskName}"
                                        TextWrapping="WrapWithOverflow" />
                                    <Border
                                        Grid.Row="2"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" />
                                    <DockPanel Grid.Row="3">
                                        <TextBlock
                                            Margin="0,2,0,2"
                                            FontSize="8"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            Text="{Binding CreatedDate, StringFormat='dd/MM/yyyy'}" />
                                    </DockPanel>
                                </Grid>

                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <GroupBox
                    Grid.Column="2"
                    FontWeight="DemiBold"
                    Header="IN PROGESS">
                    <ListBox
                        ItemsSource="{Binding TaskInProgesses}"
                        MouseLeave="ListBox_MouseLeave"
                        SelectedValue="{Binding CurrentTask, Mode=TwoWay}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                <Setter Property="MinHeight" Value="60" />
                                <Setter Property="Margin" Value="0,10,0,10" />
                                <Setter Property="Effect" Value="{StaticResource EffectShadow3}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <hc:TransitioningContentControl TransitionMode="Bottom2Top">
                                                <Border
                                                    x:Name="Bd"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="{Binding Path=(hc:BorderElement.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                                                    SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                            </hc:TransitioningContentControl>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,2,0,2"
                                        FontSize="8"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskCode}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="0,2,0,2"
                                        FontSize="16"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskName}"
                                        TextWrapping="WrapWithOverflow" />
                                    <Border
                                        Grid.Row="2"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" />
                                    <DockPanel Grid.Row="3">
                                        <TextBlock
                                            Margin="0,2,0,2"
                                            FontSize="8"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            Text="{Binding CreatedDate, StringFormat='dd/MM/yyyy'}" />
                                    </DockPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <GroupBox
                    Grid.Column="4"
                    FontWeight="DemiBold"
                    Header="DONE">
                    <ListBox
                        ItemsSource="{Binding TaskDones}"
                        MouseLeave="ListBox_MouseLeave"
                        SelectedValue="{Binding CurrentTask, Mode=TwoWay}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                <Setter Property="MinHeight" Value="60" />
                                <Setter Property="Margin" Value="0,10,0,10" />
                                <Setter Property="Effect" Value="{StaticResource EffectShadow3}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <hc:TransitioningContentControl TransitionMode="Bottom2Top">
                                                <Border
                                                    x:Name="Bd"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="{Binding Path=(hc:BorderElement.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                                                    SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                            </hc:TransitioningContentControl>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,2,0,2"
                                        FontSize="8"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskCode}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="0,2,0,2"
                                        FontSize="16"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{Binding TaskName}"
                                        TextWrapping="WrapWithOverflow" />
                                    <Border
                                        Grid.Row="2"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" />
                                    <DockPanel Grid.Row="3">
                                        <TextBlock
                                            Margin="0,2,0,2"
                                            FontSize="8"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            Text="{Binding CreatedDate, StringFormat='dd/MM/yyyy'}" />
                                    </DockPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <GroupBox Grid.Column="6" FontWeight="DemiBold">
                    <GroupBox.Header>
                        <TextBlock>
                            <Run Text="{Binding CurrentTask.Project.ProjectName}" />
                            <Run Text="/" />
                            <Run Text="{Binding CurrentTask.TaskCode}" />
                        </TextBlock>
                    </GroupBox.Header>
                    <hc:PropertyGrid Column="Default" SelectedObject="{Binding CurrentTask}" />
                </GroupBox>
            </Grid>
        </Grid>
    </hc:TransitioningContentControl>
</UserControl>
